<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_24"
        android:background="@drawable/white_bottom_corner_15">

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_50"
            android:text="筛选"
            android:textColor="@color/fontTextColor"
            android:textSize="@dimen/sp_16"
            app:fontType="@string/fontMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <cn.yanhu.baselib.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:text="年龄"
            android:textColor="@color/fontTextColor"
            android:textSize="@dimen/sp_14"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_15"
            app:fontType="@string/fontMedium"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>
        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:text="25 ~ 35"
            android:textColor="@color/colorMain"
            android:padding="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            app:fontType="@string/fontMedium"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_7"
            app:layout_constraintTop_toBottomOf="@+id/tv_age"
            android:background="@color/blackAlpha96"/>

        <cn.yanhu.baselib.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:text="所在地"
            android:textColor="@color/fontTextColor"
            android:textSize="@dimen/sp_14"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:padding="@dimen/dp_15"
            app:fontType="@string/fontMedium"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_province"
            android:layout_width="wrap_content"
            android:text="不限"
            android:textColor="@color/fontGrayColor"
            android:padding="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            app:fontType="@string/fontMedium"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/btn_reSet"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/fontGrayColor"
            app:fontType="@string/fontBold"
            android:textSize="@dimen/sp_17"
            android:background="@drawable/white_corner_30"
            android:backgroundTint="@color/base_bg_gray"
            app:layout_constraintEnd_toStartOf="@+id/btn_sure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_province" />

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/sure_title"
            android:gravity="center"
            android:textColor="@color/white"
            app:fontType="@string/fontBold"
            android:textSize="@dimen/sp_17"
            android:background="@drawable/white_corner_30"
            android:backgroundTint="@color/colorMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_reSet"
            app:layout_constraintTop_toBottomOf="@+id/tv_province" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>