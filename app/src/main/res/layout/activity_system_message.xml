<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.SystemMsgActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/base_bg_gray"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <cn.yanhu.baselib.view.TitleBar
            android:id="@+id/titleBar"
            app:titleLeftName="官方消息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/system_msg_rv"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="match_parent"
            tools:listitem="@layout/adapter_system_message_item" />

    </LinearLayout>

</layout>