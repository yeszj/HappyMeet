<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/bg_security_center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewBg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_m_60"
                    android:background="@drawable/white_top_corner_20"
                    android:backgroundTint="#F9F9F9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_top" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/white_corner_15"
                    android:paddingTop="@dimen/dp_13"
                    android:paddingBottom="@dimen/dp_13"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toTopOf="@+id/viewBg"
                    app:spanCount="4"
                    tools:itemCount="3"
                    tools:listitem="@layout/adapter_security_menu_item" />

                <View
                    android:id="@+id/bgProhibit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/white_corner_15"
                    app:layout_constraintTop_toBottomOf="@+id/rv_menu" />

                <cn.yanhu.baselib.view.CustomFontTextView
                    android:id="@+id/tv_prohibit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_18"
                    android:text="平台处罚公告"
                    android:textColor="@color/fontTextColor"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/bgProhibit"
                    app:layout_constraintTop_toTopOf="@+id/bgProhibit" />

                <com.youth.banner.Banner
                    android:id="@+id/bannerProhibit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_240"
                    android:layout_marginTop="@dimen/dp_8"
                    app:banner_auto_loop="true"
                    app:banner_loop_time="3000"
                    app:banner_orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@+id/bgProhibit"
                    app:layout_constraintStart_toStartOf="@id/bgProhibit"
                    app:layout_constraintTop_toBottomOf="@+id/tv_prohibit" />

                <View
                    android:id="@+id/bgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_158"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/white_corner_15"
                    app:layout_constraintTop_toBottomOf="@+id/bgProhibit" />

                <cn.yanhu.baselib.view.CustomFontTextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_18"
                    android:text="安全提醒"
                    android:textColor="@color/fontTextColor"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/bgBanner"
                    app:layout_constraintTop_toTopOf="@+id/bgBanner" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="@+id/bgBanner"
                    app:layout_constraintStart_toStartOf="@id/bgBanner"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tips" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <cn.yanhu.baselib.view.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:titleName="安全中心" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>