<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_74"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/avatarLayout"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_13">

        <com.netease.yunxin.kit.common.ui.widgets.ContactAvatarView
            android:id="@+id/avatarView"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50" />
        <com.lihang.ShadowLayout
            android:id="@+id/sl_groupRole"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            app:hl_cornerRadius_rightBottom="@dimen/dp_12"
            app:hl_startColor="#F8459B"
            app:hl_endColor="#00F8459B"
            android:visibility="invisible"
            app:hl_angle="90"
            app:hl_cornerRadius_leftBottom="@dimen/dp_12"
            android:layout_height="@dimen/dp_20">
        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_groupRole"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_10"
            android:text="我的"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        </com.lihang.ShadowLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_online"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@drawable/svg_online_stoke_white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_73"
        android:layout_marginEnd="@dimen/dp_13"
        android:orientation="vertical">

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_100"
            android:ellipsize="end"
            android:drawablePadding="@dimen/dp_2"
            android:maxLines="1"
            android:drawableEnd="@drawable/svg_identify_tag"
            android:textColor="@color/fontTextColor"
            android:textSize="@dimen/sp_15"
            app:fontType="@string/fontMedium"
            tools:text="能吃一杆能吃一杆能吃一杆能吃一杆能吃一杆" />

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_onlineCount"
            android:layout_width="wrap_content"
            tools:text="6人在线"
            android:visibility="gone"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_23"
            android:textColor="@color/white"
            android:background="@drawable/tag_group_online"
            android:layout_height="@dimen/dp_16"/>

        <LinearLayout
            android:id="@+id/vg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dimen_18_dp"
            android:orientation="horizontal">

            <cn.yanhu.baselib.view.CustomFontTextView
                android:id="@+id/aitTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/conversation_ait_tip"
                android:textColor="@color/color_f24957"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <cn.yanhu.baselib.view.CustomFontTextView
                android:id="@+id/messageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13"
                tools:text="内尔呢人" />
        </LinearLayout>

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ellipsize="end"
            android:paddingTop="@dimen/dp_5"
            android:maxWidth="@dimen/dimen_100_dp"
            android:maxLines="1"
            android:textColor="@color/fontGrayColor"
            android:textSize="@dimen/sp_10"
            tools:text="08:10" />

        <ImageView
            android:id="@+id/muteIv"
            android:layout_width="@dimen/dimen_12_dp"
            android:layout_height="@dimen/dimen_12_dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="@+id/vg_content"
            app:layout_constraintBottom_toBottomOf="@+id/vg_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/ic_conversation_mute"
            tools:visibility="visible"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unreadTv"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/vg_content"
            app:layout_constraintBottom_toBottomOf="@+id/vg_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_unread_msg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_2"
            android:text="3"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

</FrameLayout>