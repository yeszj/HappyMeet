<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_corner_12"
    android:paddingTop="@dimen/dp_20"
    tools:ignore="MissingDefaultResource">

    <cn.yanhu.baselib.view.CustomFontTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontType="@string/fontMedium"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        tools:text="温馨提示"
        android:textColor="@color/fontTextColor"
        android:textSize="@dimen/sp_16" />

    <cn.yanhu.baselib.view.CustomFontTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:visibility="visible"
        tools:text="Are you sure you want to finish the video call?"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/fontTextColor"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/_xpopup_content_color"
        android:textColorHint="#999999"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="end"
        android:paddingBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_15"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingBottom="10dp"
            android:text="@string/cancel"
            android:textColor="@color/fontGrayColor"
            android:textSize="@dimen/sp_16" />

        <cn.yanhu.baselib.view.CustomFontTextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="1"
            app:fontType="@string/fontBold"
            android:background="@drawable/shape_common_btn_r30"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="@string/xpopup_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>