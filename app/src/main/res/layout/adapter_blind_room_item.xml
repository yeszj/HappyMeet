<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="roomBean"
            type="cn.yanhu.commonres.bean.RoomListBean" />
        <import type="cn.yanhu.commonres.R"/>
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_cover"
            imageUrl="@{roomBean.coverUrl}"
            placeholderId="@{R.drawable.pic_default_bg}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_10"
            tools:src="@drawable/ease_default_avatar" />
        <LinearLayout
            android:id="@+id/statuBg"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_22"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_cover"
            android:background="@drawable/shape_blinddate_room_seven" >
            <com.opensource.svgaplayer.SVGAImageView
                android:id="@+id/iv_status"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                app:autoPlay="true"
                app:source="play_white.svga"
                android:visibility="@{roomBean.roomType==0?View.INVISIBLE:View.VISIBLE}" />
            <cn.yanhu.baselib.view.CustomFontTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text='@{roomBean.roomType==3?"七人交友":roomBean.roomType==4?"七人天使":"拍卖房"}'
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:fontType="@string/fontMedium"
                tools:text="五人交友" />
        </LinearLayout>

        <cn.yanhu.commonres.view.UserAvatarView
            android:layout_width="wrap_content"
            android:id="@+id/iv_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statuBg"
            app:svgAvatarSize="@dimen/dp_72"
            app:avatarSize="@dimen/dp_72"
            avatarUrl="@{roomBean.ownerInfo.portrait}"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content"/>
        <cn.yanhu.baselib.view.CustomFontTextView
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
            tools:text="狂傲の敏大爷的王管家"
            style="@style/common_white_shadow"
            android:text="@{roomBean.ownerInfo.nickName}"
            android:textColor="@color/white"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            app:fontType="@string/fontMedium"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_avatar"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/adapter_blind_room_avatar_item"
            android:layout_marginBottom="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="@dimen/dp_30"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>