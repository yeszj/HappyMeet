<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coin_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bubble"
    android:layout_alignStart="@+id/bubble"
    android:gravity="center"
    android:paddingTop="@dimen/dp_2"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/ic_coin" />

    <TextView
        android:id="@+id/coin_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/cl_common_opacity_50"
        android:textSize="@dimen/sp_13"
        tools:text="+8金币" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_coin"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        android:src="@drawable/icon_has_get_coin" />

    <TextView
        android:id="@+id/tv_rewardDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/cl_common_opacity_50"
        android:textSize="@dimen/sp_13"
        tools:text="+8金币" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_question"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_2"
        android:src="@drawable/svg_question" />

</LinearLayout>